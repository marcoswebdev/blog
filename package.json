{
  "name": "blog",
  "version": "0.1.0",
  "description": "Personal web development laboratory",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "rocket start",
    "build": "npm run rocket:build",
    "clean": "rm -rf _site-dev",
    "lint": "run-p lint:*",
    "lint:eclint": "git ls-files | xargs eclint check",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "lint:markdownlint": "git ls-files '*.md' | xargs markdownlint",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/**/*.{js,mdx,md}\" --write",
    "release": "standard-version",
    "rocket:build": "node node_modules/@rocket/cli/src/cli.js build",
    "test": "wtr src/**/test/**/*.test.js --node-resolve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcoswebdev/blog.git",
    "https": "https://github.com/marcoswebdev/blog.git",
    "editUrl": "https://github.com/marcoswebdev/blog/-/edit/master"
  },
  "keywords": [
    "11ty",
    "markdown",
    "webcomponents"
  ],
  "author": "Marcos Gil <marcosweb.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcoswebdev/blog/issues"
  },
  "homepage": "https://marcosweb.dev",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@open-wc/eslint-config": "^4.2.0",
    "@open-wc/testing": "^2.5.32",
    "@rocket/blog": "^0.3.0",
    "@rocket/cli": "^0.5.2",
    "@rocket/core": "^0.1.1",
    "@rocket/launch": "^0.4.0",
    "@web/test-runner": "^0.12.15",
    "eclint": "^2.8.1",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "markdownlint-cli": "^0.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-plugin-package": "^1.3.0",
    "standard-version": "^9.1.0"
  },
  "dependencies": {
    "lit-element": "^2.4.0"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "all"
  }
}
